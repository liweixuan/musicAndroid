<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/line_bottom_bg"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout style="@style/AutoMatch"

        >

        <LinearLayout
            android:id="@+id/top_nav_layout"
            style="@style/MatchMatch.Horizontal">
            <TextView
                android:id="@+id/dynamic_tv"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="动态"
                android:textColor="@color/inter_fg_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/partner_tv"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="伙伴"
                android:textColor="@color/inter_fg_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/organize_tv"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="团体"
                android:textColor="@color/inter_fg_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/match_tv"
                style="@style/AutoMatch"
                android:gravity="center"
                android:text="比赛"
                android:textColor="@color/inter_fg_nav_text_color"
                android:textSize="18sp" />
        </LinearLayout>
        <View
            android:id="@+id/vp_indicator"
            android:layout_gravity="bottom"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#f00"
            android:layout_marginBottom="5dp"/>
    </FrameLayout>

    <ImageView
        android:layout_width="5dp"
        android:layout_height="30dp"
        android:background="#000" />

    <ImageView
        android:id="@+id/more_sel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#49d919" />


</LinearLayout>
